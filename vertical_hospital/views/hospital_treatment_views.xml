<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hospital_treatment_view_form" model="ir.ui.view">
            <field name="name">hospital.treatment.form</field>
            <field name="model">hospital.treatment</field>
            <field name="arch" type="xml">
                <form string="Hospital treatment">
                    <sheet>
                        <group>
                           <group>
                               <field name="name"/>
                               <field name="doctor"/>
                           </group>
                           <group>
                               <field name="code"/>
                           </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hospital_treatment_view_tree" model="ir.ui.view">
            <field name="name">hospital.treatment.tree</field>
            <field name="model">hospital.treatment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="doctor"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
